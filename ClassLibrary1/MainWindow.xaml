<Window x:Class="ClassLibrary1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassLibrary1"
        mc:Ignorable="d"
        Title="Plugin Shaft-add" Height="400" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Selecione o arquivo estrutural:"/>
            <ComboBox x:Name="cmbArquivoEstrutural" Width="200" Margin="0 5"/>
            <TextBlock Text="Selecione o arquivo de tubulação:"/>
            <ComboBox x:Name="cmbArquivoTubulacao" Width="200" Margin="0 5"/>
            <Button Content="Executar Plugin" Width="120" HorizontalAlignment="Center" Click="Button_Click" Margin="0 10"/>
        </StackPanel>
    </Grid>
    </Window>
